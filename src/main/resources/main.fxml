<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.ShoppingCartController"
      spacing="10" alignment="CENTER" padding="20">
    <Text fx:id="titleText" text="Shopping Cart" style="-fx-font-size: 20;" />
    <ChoiceBox fx:id="languageChoice" />
    <TextField fx:id="itemCountField" promptText="Enter number of items" />
    <Button fx:id="calculateButton" text="Calculate" onAction="#handleCalculate" />
    <TextArea fx:id="outputArea" promptText="Result will appear here" prefRowCount="5" />
</VBox>
