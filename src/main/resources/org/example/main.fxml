<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.ShoppingCartController"
      spacing="10" alignment="CENTER">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Text fx:id="titleText" text="Shopping Cart" style="-fx-font-size: 20;" />
    <ChoiceBox fx:id="languageChoice" />

    <VBox fx:id="itemsContainer" spacing="5" />

    <Button fx:id="addItemButton" text="Add Item" onAction="#handleAddItem"/>
    <Button fx:id="calculateButton" text="Calculate" onAction="#handleCalculate" />

    <TextArea fx:id="outputArea" prefRowCount="5" />
</VBox>
